{
  "schema_version": 1,
  "tool_version": "0.1.0",
  "files": ["./**/*.go"],
  "fail_if_no_match": true,
  "exit_code_no_diff": 2,
  "rules": [
    {
      "rule_id": "r001-add-error-return",
      "pattern": "func (\\w+)\\(([^)]*)\\)",
      "replacement": "func $1($2) error",
      "operation": "replace",
      "occurrences": "all",
      "multiline": true,
      "dot_all": false,
      "must_match": 3,
      "must_change_bytes": 10,
      "context": {
        "before": "// TODO: add error handling",
        "after": "{",
        "window_before": 5,
        "window_after": 2
      }
    }
  ]
}
